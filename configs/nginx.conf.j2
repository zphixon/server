# vim: et ts=2 sw=2 ft=nginx

user {{ nginx.user }};
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
  worker_connections 768;
}

# syncthing data port
stream {
  server {
    listen {{ syncthing.ports.data_public }};
    proxy_pass [::1]:{{ syncthing.ports.data_private }};
  }
}

http {
  sendfile on;
  tcp_nopush on;
  types_hash_max_size 2048;
  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
  ssl_prefer_server_ciphers on;

  # wish I could just do like $default or something
  log_format with_host
    '$remote_addr - $remote_user [$time_local] '
    '$http_host "$request" $status $body_bytes_sent '
    '"$http_referer" "$http_user_agent"';

  access_log {{ nginx.dir }}/access.log with_host;
  error_log {{ nginx.dir }}/error.log;

  gzip on;
  include {{ nginx.dir }}/sites.conf;
}
