# vim: et ts=2 sw=2 ft=nginx

server {
  server_name gang-and-friends.com;
  listen [::]:80;
  root {{ nginx.dir }}/www/gang-and-friends.com;
  index index.html;
  location / {
    try_files $uri $uri/ =404;
  }
}

