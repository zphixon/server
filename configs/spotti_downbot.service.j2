[Unit]
Description=spotti discord downbot
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User={{ spotti.user }}
ExecStart={{ spotti.dir }}/python/bin/python3 {{ spotti.dir }}/downbot.py {{ spotti.dir }}/downbot.toml
StandardOutput=syslog+console

[Install]
WantedBy=multi-user.target

